{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./devDist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "@src/*": ["src/*"],       
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}