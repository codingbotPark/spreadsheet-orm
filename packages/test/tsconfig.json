{
    "extends": "../../tsconfig.base.json",  // 루트의 tsconfig.base.json을 확장
    "compilerOptions": {
      "module": "nodenext",                   // 모듈 시스템 설정
      "esModuleInterop": true,
      "strict": true,
      "moduleResolution": "nodenext",
      "skipLibCheck": true,
      "resolveJsonModule": true,           
      "baseUrl": ".",
      "paths": {
        "@fixtures/*": ["fixtures/*"],
        "@security/*":["security/*"],
        "spreadsheet-orm":["../main/src/index.ts"],
        "spreadsheet-orm/*":["../main/src/*"],
        "@core/*": ["../main/src/*"],
        "@core": ["../main/src/index.ts"],
        "@core-built/*": ["../main/dist/*"],
        "@core-built": ["../main/dist/index.js"]
      },
      "composite": true,
    },
    "ts-node": {
      "esm": true
    },
    "include": [
      "index.ts",
      "fixtures/**/*",
      "integration/**/*",
      "unit/**/*",
      "src/**/*", 
      "../main/src/**/*",
    ],
    "references": [
      { "path": "../main" }
    ]
  }